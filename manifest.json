{
  "manifest_version": 3,
  "name": "Codeforces UI Enhancer - Beautiful Modern Interface",
  "version": "2.0.0",
  "description": "Transform Codeforces into an absolutely stunning, modern, and beautiful platform with cutting-edge design",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.codeforces.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["styles.css", "icons/*"],
    "matches": ["*://*.codeforces.com/*"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Toggle Beautiful Codeforces UI",
    "default_popup": "popup.html"
  }
} 