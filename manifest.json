{
  "manifest_version": 3,
  "name": "Codeforces UI Enhancer - LeetCode Style",
  "version": "1.0.0",
  "description": "Clean LeetCode-style navigation and UI for Codeforces",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "*://*.codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.codeforces.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Codeforces UI Enhancer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 