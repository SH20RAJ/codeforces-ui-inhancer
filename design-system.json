{
  "designSystem": {
    "name": "Codeforces Dev.to Inspired UI",
    "version": "4.0.0",
    "description": "Modern, clean, and accessible design system inspired by dev.to",
    "theme": {
      "spacing": {
        "xs": "4px",
        "sm": "8px", 
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "2xl": "48px",
        "3xl": "64px"
      },
      "colors": {
        "primary": {
          "bg": "#0f0f23",
          "surface": "#161625",
          "card": "#1e1e2e",
          "hover": "rgba(255, 255, 255, 0.03)",
          "accent": "rgba(64, 132, 255, 0.1)"
        },
        "light": {
          "bg": "#fafafa",
          "surface": "#ffffff",
          "card": "#ffffff", 
          "hover": "rgba(0, 0, 0, 0.02)",
          "accent": "rgba(64, 132, 255, 0.08)"
        },
        "borders": {
          "light": "rgba(255, 255, 255, 0.06)",
          "medium": "rgba(255, 255, 255, 0.12)",
          "heavy": "rgba(255, 255, 255, 0.2)"
        },
        "accent": {
          "primary": "#4084ff",
          "hover": "#5a94ff",
          "success": "#10b981",
          "warning": "#f59e0b",
          "error": "#ef4444"
        },
        "text": {
          "primary": "#f4f4f5",
          "secondary": "#a1a1aa",
          "muted": "#71717a",
          "accent": "#4084ff"
        },
        "textLight": {
          "primary": "#0a0a0a",
          "secondary": "#525252",
          "muted": "#a3a3a3",
          "accent": "#4084ff"
        }
      },
      "typography": {
        "fontFamily": {
          "primary": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif",
          "mono": "'JetBrains Mono', 'Fira Code', Consolas, monospace"
        },
        "fontSize": {
          "xs": "11px",
          "sm": "13px", 
          "base": "14px",
          "lg": "16px",
          "xl": "18px",
          "2xl": "20px",
          "3xl": "24px"
        },
        "fontWeight": {
          "normal": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700
        },
        "lineHeight": {
          "tight": 1.3,
          "normal": 1.5,
          "relaxed": 1.6
        }
      },
      "borderRadius": {
        "sm": "6px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px"
      },
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.3)",
        "md": "0 1px 3px 0 rgba(0, 0, 0, 0.4), 0 1px 2px 0 rgba(0, 0, 0, 0.3)",
        "lg": "0 4px 6px -1px rgba(0, 0, 0, 0.4), 0 2px 4px -1px rgba(0, 0, 0, 0.3)",
        "xl": "0 10px 15px -3px rgba(0, 0, 0, 0.4), 0 4px 6px -2px rgba(0, 0, 0, 0.3)"
      },
      "transitions": {
        "fast": "200ms cubic-bezier(0.4, 0, 0.2, 1)",
        "normal": "300ms cubic-bezier(0.4, 0, 0.2, 1)",
        "slow": "500ms cubic-bezier(0.4, 0, 0.2, 1)"
      }
    },
    "components": {
      "navbar": {
        "height": "64px",
        "background": "#161625",
        "backdrop": "blur(20px)",
        "border": "1px solid rgba(255, 255, 255, 0.06)"
      },
      "card": {
        "background": "#1e1e2e",
        "border": "1px solid rgba(255, 255, 255, 0.06)",
        "borderRadius": "12px",
        "padding": "32px",
        "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.3)"
      },
      "button": {
        "primary": {
          "background": "#4084ff",
          "color": "#ffffff",
          "borderRadius": "8px",
          "padding": "8px 24px",
          "height": "40px"
        },
        "secondary": {
          "background": "#1e1e2e",
          "color": "#f4f4f5",
          "border": "1px solid rgba(255, 255, 255, 0.12)",
          "borderRadius": "8px",
          "padding": "8px 24px",
          "height": "40px"
        }
      },
      "table": {
        "headerBackground": "#161625",
        "rowBackground": "#1e1e2e",
        "borderColor": "rgba(255, 255, 255, 0.06)",
        "hoverBackground": "rgba(255, 255, 255, 0.03)"
      }
    }
  }
}
